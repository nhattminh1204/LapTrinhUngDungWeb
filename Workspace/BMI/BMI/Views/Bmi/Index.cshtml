@model BMI.Models.BmiResult

@{
    ViewData["Title"] = "Tính chỉ số BMI";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">🧮 Tính chỉ số BMI</h2>

    <form method="post" class="card p-4 shadow-sm">
        <div class="mb-3">
            <label class="form-label">Chiều cao (m):</label>
            <input name="height" type="number" step="0.01" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Cân nặng (kg):</label>
            <input name="weight" type="number" step="0.1" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">Tính BMI</button>
    </form>

    @if (Model != null)
    {
        <div class="alert alert-info mt-4 shadow-sm">
            <h5>Kết quả:</h5>
            <p><strong>Chiều cao:</strong> @Model.Height m</p>
            <p><strong>Cân nặng:</strong> @Model.Weight kg</p>
            <p><strong>BMI:</strong> @Model.Bmi</p>
            <p><strong>Trạng thái:</strong> @Model.Status</p>
        </div>
    }

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-3">@ViewBag.Error</div>
    }
</div>
