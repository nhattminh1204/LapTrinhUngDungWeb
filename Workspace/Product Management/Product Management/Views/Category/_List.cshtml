@model Product_Management.ViewModel.CategoryViewModel

<div class="table-responsive">
    <table class="table table-hover table-striped mb-0 table-bordered" style="table-layout: fixed; width: 100%;">
    <thead class="table-dark">
    <tr class="text-center">
        <th style="width: 10%;">STT</th>
        <th style="width: 15%;">Mã danh mục</th>
        <th style="width: 60%;">Tên danh mục</th>
        <th style="width: 15%;">Thao tác</th>
    </tr>
    </thead>
    <tbody>

    @if (Model.Categories != null)
    {
        int i = (Model.PageIndex - 1) * Model.PageSize;
        @foreach (var cate in Model.Categories)
        {
            <tr>
                <td class="text-center">@(++i)</td>
                <td class="text-center">@cate.Id</td>
                <td>@cate.Name</td>
                <td class="text-center">
                    <div class="d-flex flex-column gap-1">
                        <button onclick="loadUpdateModalCategory(@cate.Id)" class="btn btn-info btn-sm" title="Chỉnh sửa">
                            <i class="fa-solid fa-pen text-white"></i>
                        </button>
                        <button onclick="openDeleteModalCategory(@cate.Id, '@cate.Name')" data-bs-toggle="modal" data-bs-target="#deleteModal" class="btn btn-danger btn-sm" title="Xóa">
                            <i class="fa-solid fa-trash"></i>
                        </button>
                    </div>
                </td>

            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="4" class="text-center text-muted py-5">
                <i class="fa-solid fa-tags fa-3x mb-3 text-muted"></i>
                <div>Không có danh mục nào</div>
            </td>
        </tr>
    }
    </tbody>
</table>
</div>

<div class="d-flex justify-content-end" style="position: absolute; bottom: 0; right: 0; background: white; padding: 15px; width: 100%; border-top: 1px solid #dee2e6;">
    <nav aria-label="Page navigation">
        <ul class="pagination mb-0">
            <li class="page-item @((Model.PageIndex == 1) ? "disabled" : "")">
                <a class="page-link" aria-label="Previous">
                    <span onclick="onPagingCategory(@(Model.PageIndex-1))" aria-hidden="true">&laquo;</span>
                </a>
            </li>

            @for (int i = 1; i <= Model.PageCount; i++)
            {
                <li class="page-item @((Model.PageIndex == i) ? "active" : "")">
                    <a onclick="onPagingCategory(@i)" class="page-link">@i</a>
                </li>
            }

            <li class="page-item @((Model.PageIndex == Model.PageCount) ? "disabled" : "")">
                <a class="page-link" aria-label="Next">
                    <span onclick="onPagingCategory(@(Model.PageIndex + 1))" aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>

