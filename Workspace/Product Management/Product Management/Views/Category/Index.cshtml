@{
    ViewData["Title"] = "Category";
}

@model Product_Management.ViewModel.CategoryViewModel

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-primary mb-0"><i class="fa-solid fa-tags me-2"></i>Quản lý danh mục</h1>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fa-solid fa-exclamation-triangle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-8">
                <label class="form-label fw-semibold">Tìm kiếm danh mục</label>
                <div class="input-group">
                    <input onkeypress="onEnterCategory(event)" type="text" class="form-control" id="keywordCategory" placeholder="Nhập tên danh mục...">
                    <button onclick="onSearchCategory()" class="btn" style="background: var(--primary-gradient); color: white; border: none;" type="button">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button>
                </div>
            </div>
            <div class="col-md-4">
                <label class="form-label fw-semibold">&nbsp;</label>
                <div>
                    <button data-bs-toggle="modal" data-bs-target="#createModal" class="btn w-100" style="background: var(--primary-gradient); color: white; border: none;">
                        <i class="fa-solid fa-plus me-1"></i>Thêm danh mục
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="card shadow-sm">
    <div class="card-body p-0">
        <div id="categories" style="min-height: 600px; position: relative; padding-bottom: 100px;">
            <partial name="_List" model="@Model"/>
        </div>
    </div>
</div>

<partial name="_Create" model="@Model" />

<div id="updateModalContainer">
    <partial name="_Update" model="@Model" />
</div>

<partial name="_Delete" model="@Model" />



