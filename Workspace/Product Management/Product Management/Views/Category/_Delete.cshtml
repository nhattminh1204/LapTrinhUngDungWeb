@using Product_Management.ViewModel
@model CategoryViewModel

<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5">Xác nhận xóa danh mục</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa danh mục <strong id="deleteCategoryName"></strong> không?</p>
                <div id="productsList" style="display: none;">
                    <p class="text-warning"><strong>Cảnh báo:</strong> Danh mục này đang có các sản phẩm sau:</p>
                    <ul id="productsInCategory" class="list-group mb-3"></ul>
                    <p class="text-danger"><strong>Tất cả sản phẩm này sẽ bị xóa cùng với danh mục!</strong></p>
                </div>
                <p class="text-danger">Hành động này không thể hoàn tác!</p>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" method="post">
                    <input type="hidden" id="deleteCategoryId" name="id" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>
