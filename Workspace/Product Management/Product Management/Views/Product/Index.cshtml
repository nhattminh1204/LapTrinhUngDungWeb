@using Product_Management.ViewModel
@model ProductViewModel

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-primary mb-0"><i class="fa-solid fa-box me-2"></i>Quản lý sản phẩm</h1>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-3">
                <label class="form-label fw-semibold">Danh mục</label>
                <select id="category" class="form-select">
                    <option value="0">Tất cả danh mục</option>
                    @if (Model.Categories != null)
                    {
                        foreach (var cat in Model.Categories)
                        {
                            <option value="@cat.Id">@cat.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="col-md-7">
                <label class="form-label fw-semibold">Tìm kiếm</label>
                <div class="input-group">
                    <input onkeypress="onEnter(event)" type="text" class="form-control" id="keyword" placeholder="Nhập tên sản phẩm...">
                    <button onclick="onSearch()" class="btn" style="background: var(--primary-gradient); color: white; border: none;" type="button">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button>
                </div>
            </div>
            <div class="col-md-2">
                <label class="form-label fw-semibold">&nbsp;</label>
                <div>
                    <button data-bs-toggle="modal" data-bs-target="#createModal" class="btn w-100" style="background: var(--primary-gradient); color: white; border: none;">
                        <i class="fa-solid fa-plus me-1"></i>Thêm mới
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="card shadow-sm">
    <div class="card-body p-0">
        <div id="products" style="min-height: 600px; position: relative; padding-bottom: 100px;">
            <partial name="_List" model="@Model"/>
        </div>
    </div>
</div>


<partial name="_Create" model="@Model" />

<div id="updateModalContainer">
    <partial name="_Update" model="@Model" />
</div>

<partial name="_Delete" model="@Model" />
