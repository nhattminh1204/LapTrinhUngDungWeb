@using Product_Management.ViewModel
@model ProductViewModel


<div class="table-responsive">
    <table class="table table-hover table-striped mb-0 bordered"
           style="table-layout: fixed; width: 100%; border: 1px solid #dee2e6;">
        <thead class="table-dark">
            <tr class="text-center">
                <th style="width: 5%;">STT</th>
                <th style="width: 5%;">Id</th>
                <th style="width: 15%;">Tên sản phẩm</th>
                <th style="width: 20%;">Mô tả</th>
                <th style="width: 10%;">Giá</th>
                <th style="width: 8%;">Số lượng</th>
                <th style="width: 10%;">Ngày sản xuất</th>
                <th style="width: 10%;">Hình ảnh</th>
                <th style="width: 10%;">Danh mục</th>
                <th style="width: 7%;">Thao tác</th>
            </tr>
        </thead>
        <tbody>
        @if (Model.Products != null && Model.Products.Count > 0)
        {
            int index = (Model.PageIndex - 1) * Model.PageSize;
            foreach (var product in Model.Products)
            {
                <tr>
                    <td>@(++index)</td>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td style="word-wrap: break-word; overflow: hidden; text-overflow: ellipsis;">@(string.IsNullOrEmpty(product.Description) ? "Chưa có mô tả" : (product.Description.Length > 50 ? product.Description.Substring(0, 50) + "..." : product.Description))</td>
                    <td>@product.Price.ToString("N0") VNĐ</td>
                    <td>@product.Quantity</td>
                    <td>@product.ManuDate.ToString("dd/MM/yyyy")</td>
                    <td class="text-center">
                        @if (!string.IsNullOrEmpty(product.image))
                        {
                            <img src="@product.image" style="width:80px; height:80px; object-fit:cover; border-radius:5px;" alt="@product.Name" />
                        }
                        else
                        {
                            <span class="text-muted">Không có ảnh</span>
                        }
                    </td>
                    <td>@product.CategoryName</td>
                    <td class="text-center">
                        <div class="d-flex flex-column gap-1">
                            <button onclick="loadUpdateModal(@product.Id)" class="btn btn-info btn-sm" title="Chỉnh sửa">
                                <i class="fa-solid fa-pen text-white"></i>
                            </button>
                            <button onclick="openDeleteModal(@product.Id, '@product.Name')" data-bs-toggle="modal" data-bs-target="#deleteModal" class="btn btn-danger btn-sm" title="Xóa">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="10" class="text-center text-muted py-5">
                    <i class="fa-solid fa-box-open fa-3x mb-3 text-muted"></i>
                    <div>Không có sản phẩm nào</div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

<div class="d-flex justify-content-end" style="position: absolute; bottom: 0; right: 0; background: white; padding: 15px; width: 100%; border-top: 1px solid #dee2e6;">
    <nav aria-label="Page navigation">
        <ul class="pagination mb-0">
            <li class="page-item @((Model.PageIndex == 1) ? "disabled" : "")">
                <a class="page-link" aria-label="Previous">
                    <span onclick="onPaging(@(Model.PageIndex-1))" aria-hidden="true">&laquo;</span>
                </a>
            </li>

            @for (int i = 1; i <= Model.PageCount; i++)
            {
                <li class="page-item @((Model.PageIndex == i) ? "active" : "")">
                    <a onclick="onPaging(@i)" class="page-link">@i</a>
                </li>
            }

            <li class="page-item @((Model.PageIndex == Model.PageCount) ? "disabled" : "")">
                <a class="page-link" aria-label="Next">
                    <span onclick="onPaging(@(Model.PageIndex + 1))" aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>